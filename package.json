{
  "name": "@zonr/core",
  "version": "1.0.1",
  "description": "A modern TypeScript library for building organized, dynamic terminal interfaces with zone-based layouts",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "clean": "rimraf dist",
    "playground": "tsx playground/index.ts",
    "demo:minimal": "tsx playground/demo-minimal.ts",
    "demo:dashboard": "tsx playground/demo-dashboard.ts",
    "demo:build": "tsx playground/demo-build-system.ts",
    "demo:data": "tsx playground/demo-data-processing.ts",
    "demo:gaming": "tsx playground/demo-gaming.ts",
    "typecheck": "tsc --noEmit",
    "commit": "cz",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "release": "semantic-release",
    "release:dry": "semantic-release --dry-run",
    "prepublishOnly": "pnpm run clean && pnpm run build && pnpm run test:run && pnpm run lint && pnpm run typecheck",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.35.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "^24.3.1",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vitest/ui": "^3.2.4",
    "commitizen": "^4.3.1",
    "conventional-changelog-cli": "^5.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "semantic-release": "^24.2.8",
    "tsx": "^4.20.5",
    "typescript": "^5.5.3",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "terminal",
    "cli",
    "tui",
    "terminal-ui",
    "zones",
    "layout",
    "dashboard",
    "logging",
    "typescript",
    "ansi",
    "console",
    "interface"
  ],
  "author": "itsJess1ca <jessica.ide247@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/itsJess1ca/Zonr.git"
  },
  "engines": {
    "node": ">=16"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "sonic-boom": "^4.2.0",
    "string-width": "^8.1.0"
  }
}
